{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "es2015",
        "lib": ["es2016", "dom"]
    },
    "include": [
        "./src/**/*"
    ]
}